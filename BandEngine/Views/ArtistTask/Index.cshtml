@model BandEngine.Models.ArtistTaskViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Tasks</h2>

<p>
    @Html.ActionLink("Create New Task", "Create")
</p>

<div class="row">
    <div class="col-md-12">
        <h3 class="greenbackground">In Progress</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th>
                    @Html.DisplayName("Progress")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.InProgress)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Progress)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TaskId }) |
                        @Html.ActionLink("Complete", "Move", new { id = item.TaskId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3 class="redbackground">Not Started</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th>
                    @Html.DisplayName("Progress")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.NotStarted)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Progress)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TaskId }) |
                        @Html.ActionLink("Start", "Move", new { id = item.TaskId })
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="col-md-6">
        <h3 class="yellowbackground">Completed</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th>
                    @Html.DisplayName("Progress")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Completed)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Progress)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TaskId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
