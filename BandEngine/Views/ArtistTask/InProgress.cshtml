@model IEnumerable<BandEngine.Models.ArtistTask>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h5>
            <p>
                @Html.ActionLink("Not Started", "Index") |
                @Html.ActionLink("In Progress", "InProgress") |
                @Html.ActionLink("Completed", "Completed")
            </p>
        </h5>
    </div>
</div>

<h2>In Progress Tasks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Progress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Progress)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TaskId }) |
                @Html.ActionLink("Move to Completed", "Move", new { id = item.TaskId })
            </td>
        </tr>
    }

</table>
